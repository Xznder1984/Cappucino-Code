// Generate random number
secret = random 1 100
tries = 0
won = 0

repeat 10 {
    tries = tries + 1
    
    say "Attempt "
    say tries
    say " of 10"
    
    guess = ask "Enter your guess: "
    
    if guess == secret {
        say "ğŸ‰ CORRECT! You won!"
        won = 1
    }
    
    if guess > secret {
        say "ğŸ“‰ Too high!"
    }
    
    if guess < secret {
        say "ğŸ“ˆ Too low!"
    }
    
    if won == 1 {
        say "You got it in "
        say tries
        say " tries!"
    }
    
    say ""
}

if won == 0 {
    say "ğŸ˜¢ Game Over! The number was "
    say secret
}
